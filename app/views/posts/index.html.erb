<div class="container">
  <h1>Posts</h1>
  <%= link_to 'New Post', new_post_path, class: "btn btn-success" %>
  <hr/>
  <table class="table table-hover">
    <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
    <thead>
      <tr class="table-dark">
        <th>Name</th>
        <th>Blog ID</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.name %></td>
          <td><%= post.blog_id %></td>
          <td>
            <div class="btn-group" role="group" aria-label="Basic example">
              <%= link_to 'Edit', edit_post_path(post), class: "btn btn-outline-success" %>
              <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-success" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <hr/>
  <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
</div>
